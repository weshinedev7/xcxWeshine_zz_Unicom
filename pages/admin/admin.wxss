page {
  background: #f5f5f5;
}

.body {
  padding-top: 10rpx;
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
}

.list {
  width: 95%;
  margin: 0rpx auto;
  background: white;
  min-height: 210rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}

.title {
  width: 100%;
  margin-top: 10rpx;
  font-size: 14px;
  float: left;
}

.content {
  float: left;
  margin-left: 22rpx;
  margin-bottom: 10rpx;
  line-height: 50rpx;
  width: 45%;
  height: 50rpx;
}

.image {
  width: 30rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
  height: 30rpx;
  float: left;
}

text {
  font-size: 13px;
  color: #908d8e;
  margin-left: 30rpx;
  float: left;
}

.title_content {
  width: 100%;
  /* height: 50rpx; */
  float: left;
}

.action {
  width: 100rpx;
  height: 50rpx;
  border-radius: 4px;
  float: right;
  margin-right: 20rpx;
  font-size: 14px;
  margin-top: 10rpx;
  color: white;
  line-height: 50rpx;
  text-align: center;
}

.action_left {
  width: 100rpx;
  height: 50rpx;
  border-radius: 5rpx;
  float: left;
  margin-right: 20rpx;
  font-size: 14px;
  margin-left: -10rpx;
  margin-top: 40rpx;
  color: white;
  line-height: 50rpx;
  text-align: center;
}

.btn {
  width: 100%;
  height: 80rpx;
  text-align: center;
  background: #dd2727;
  color: white;
  line-height: 80rpx;
  font-size: 13px;
  z-index: 999;
  bottom: 0px;
  position: fixed;
}

.btn1 {
  background: #dd2727;
}

