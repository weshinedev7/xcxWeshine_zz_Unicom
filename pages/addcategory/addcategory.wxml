<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="tabNav">商品</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="tabNav">评论</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="tabNav">店面</view>
  <!-- <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="tabNav">闪现</view> -->
</view>
<swiper current="{{currentTab}}">
  <swiper-item>
    <view class="container">
      <!--左侧栏-->
      <!-- <scroll-view scroll-y scroll-top> -->
      <view class="nav_left">
        <view class="nav_left_items {{curNav == '0' ? 'active' : ''}}" bindtap="switchRightTab" data-id="0">全部</view>
        <block wx:for="{{category}}">
          <view class="nav_left_items {{curNav == item.id ? 'active' : ''}}" bindtap="switchRightTab" data-index="{{index}}" data-id="{{item.id}}">{{item.name}}</view>
        </block>
      </view>
      <!-- </scroll-view> -->
      <!--右侧栏-->

      <!-- <scroll-view> -->
      <view class="nav_right clear">
        <!--如果有数据，才遍历项-->
        <view wx:if="{{foods}}">
          <block wx:for="{{foods}}">
            <view class="nav_right_items">
              <view class="food_top">
                <view class="food_img">
                  <image src="{{item.img}}"></image>
                </view>
                <view class="food_text">
                  <view class="food_name">{{item.name}}</view>
                  <view class="food_price">{{item.price}}</view>
                  <view class="food_brief">{{item.brief}}</view>
                </view>
              </view>
              <view class="food_bottom">
                <view class="upper_lower_shelf">
                  <switch class="wx-switch-input switch" color='#dd2727' data-key="{{index}}" data-id="{{item.id}}" checked="{{item.type != 2?'true':''}}" bindchange="upperLowerShelf" />
                </view>
                <view class="edit">
                  <!-- <button>修改</button> -->
                  <navigator hover-class="none" url="/pages/varietyOfAdd/varietyOfAdd?id={{item.id}}">修改</navigator>
                </view>
                <view class="delete">
                  <!-- <button>查看评论</button> -->
                  <navigator hover-class="none" url="/pages/evaluate/evaluate?id={{item.id}}">查看评论</navigator>
                </view>
              </view>
            </view>
          </block>
          <!--如果无数据，则显示数据-->
          <view class="nodata_text" wx:if="{{foods.length == 0}}">该分类暂无数据</view>
        </view>
        <view class="nodata_text" wx:else>该分类暂无数据</view>
      </view>
      <!-- </scroll-view> -->
    </view>
  </swiper-item>
  <swiper-item>。。。评论。。。。</swiper-item>
  <swiper-item>。。。店面。。。。</swiper-item>
  <!-- <swiper-item>。。。评论。。。。</swiper-item> -->
  <!-- <swiper-item>。。。双眼皮。。。</swiper-item> -->
  <!-- <swiper-item>。。。闪现。。。</swiper-item> -->
</swiper>