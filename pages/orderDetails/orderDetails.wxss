page {
  background: #f3f3f3;
}

.mode {
  width: 95%;
  background: white;
  margin: 10rpx auto;
  padding-bottom: 10rpx;
}

.order_status {
  width: 90%;
  height: 100rpx;
  margin: 0rpx auto;
  border-bottom: 1rpx solid #ebe8e8;
}

.status {
  width: 50%;
  height: 100rpx;
  font-size: 17px;
  line-height: 100rpx;
}

.store_remarks {
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 10rpx auto;
  font-size: 14px;
  color: #6e6e6e;
}


.content {
  width: 95%;
  background: white;
  margin: 0rpx auto;
}

.store {
  width: 100%;
  height: 80rpx;
}

.store_content {
  width: 90%;
  height: 80rpx;
  font-size: 15px;
  margin: 0rpx auto;
  font-weight: 900;
  line-height: 80rpx;
  border-bottom: 2px solid #ebe8e8;
}

.store_name {
  width: 80%;
  height: 80rpx;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right {
  width: 10%;
  height: 80rpx;
  float: right;
}

.store_content image {
  width: 32rpx;
  height: 32rpx;
  margin-top: 27rpx;
}

.foods {
  width: 90%;
  margin: 40rpx auto 0rpx;
}

.foods_content {
  width: 100%;
  margin-top: 20rpx;
  height: 100rpx;
  border-bottom: 1rpx dotted #ebe8e8;
  padding-bottom: 20rpx;
}

.foods_img {
  width: 20%;
  height: 100rpx;
  float: left;
}

.foods_img image {
  width: 100%;
  height: 100rpx;
}

.foods_information {
  width: 40%;
  height: 100rpx;
  float: left;
}

.foods_name {
  font-size: 13px;
  font-weight: 700;
  width: 90%;
  float: right;
  margin-top: 10rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.foods_brief {
  font-size: 11px;
  width: 90%;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  float: right;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.foods_num {
  width: 20%;
  height: 100rpx;
  font-size: 13px;
  float: left;
  text-align: center;
  line-height: 100rpx;
}

.foods_price {
  width: 20%;
  font-size: 15px;
  height: 100rpx;
  font-weight: 700;
  color: red;
  float: left;
  text-align: center;
  line-height: 100rpx;
}

.clear:after {
  content: '';
  display: block;
  visibility: hidden;
  height: 0;
  clear: both;
}

.subtotal {
  width: 90%;
  height: 100rpx;
  margin: 30rpx auto 0rpx;
  border-top: 2px solid #ebe8e8;
}

.subtotal_price {
  width: 50%;
  height: 100rpx;
  float: right;
  line-height: 100rpx;
  text-align: right;
  font-size: 16px;
}

.subtotal_price_title {
  font-size: 10px;
  float: right;
}

.subtotal_price text {
  color: red;
  font-weight: 900;
  float: right;
}

.remarks {
  width: 95%;
  background: white;
  margin: 10rpx auto 0rpx;
	padding-bottom:10rpx;
}

.remarks .remark_title {
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 14px;
  margin: 0rpx auto;
  color: #333;
}

.remark_text {
  width: 90%;
	margin:0rpx auto;
	font-size:12px;
	color:#696868;
}

/* 订单详情 */

.order {
  width: 95%;
  margin: 0rpx auto;
  background: white;
  padding-bottom: 20rpx;
  margin-top: 10rpx;
}

.order_title {
  width: 100%;
  height: 70rpx;
  font-size: 14px;
  line-height: 70rpx;
  margin: 0rpx auto;
  color: #333;
  border-bottom: 1rpx solid #ebe8e8;
}

.order_number {
  width: 90%;
  height: 70rpx;
  font-size: 15px;
  line-height: 70rpx;
  margin: 0rpx auto;
  color: #6e6e6e;
  border-bottom: 1rpx solid #ebe8e8;
}

.number_title {
  float: left;
  font-size: 13px;
  padding-right: 10rpx;
}

.number_content {
  height: 70rpx;
  margin-left: 10rpx;
  font-size: 13px;
  line-height: 70rpx;
  float: left;
  color: #6e6e6e;
}
