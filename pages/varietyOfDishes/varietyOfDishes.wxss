/*头部*/

.top {
  width: 90%;
  height: 80rpx;
  margin: 0rpx auto;
}

/* 左侧侧边栏触发图标 */

.user {
  width: 11%;
  height: 80rpx;
  float: left;
}

.user image {
  width: 100%;
  height: 80rpx;
}

/* 搜索框 */

.search-block {
  margin: 5rpx 5rpx;
  width: 85%;
  float: right;
  display: block;
}

.search-block .navigator {
  background: #eee;
  text-align: left;
  height: 50rpx;
  line-height: 70rpx;
  border: 10rpx solid #eee;
  border-radius: 30rpx;
  color: #b2b2b2;
  position: relative;
  align-items: center;
}

.search-block .navigator image {
  height: 30rpx;
  width: 30rpx;
  margin: 9rpx 10rpx;
  position: absolute;
  top: 10%;
  left: 1%;
}

.search-block .navigator text {
  font-size: 30rpx;
  position: absolute;
  top: -15%;
  left: 10%;
}

/* 选项卡 */

.display {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.display-sele {
  font-size: 30rpx;
  width: 33.3%;
  text-align: center;
  border-bottom: 1px solid #838383;
  height: 50rpx;
}

.active {
  color: #dd2727;
  border-bottom: 1px solid #dd2727;
}

.content {
  width: 100%;
  /* height:160rpx; */
	
	padding-top:160rpx;
}

/* 菜品内容 */

.main {
  min-height: 180rpx;
  width: 90%;
  margin: 20rpx auto 0rpx;
  border-bottom: 1rpx solid rgb(241, 235, 235);
}

.content_left_content {
  width: 28%;
  float: left;
  position: relative;
}

.centent-img {
  width: 180rpx;
  height: 130rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.sold {
  font-size: 23rpx;
  padding: 5rpx;
  background: #dd2727;
  color: white;
  text-align: center;
  position: absolute;
  border-radius: 4rpx;
  top: 20rpx;
  left: 8rpx;
}

.content_left_right {
  width: 53%;
  height: 130rpx;
  padding: 0rpx 10rpx;
  margin-top: 20rpx;
  float: left;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content_name {
  width: 100%;
  margin-top: 10rpx;
  height: 30rpx;
}

.content_name_content {
  font-size: 26rpx;
  font-weight: 900;
  width: 70%;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status {
  font-size: 21rpx;
  height: 30rpx;
  background: #dd2727;
  color: white;
  float: right;
  padding: 0rpx 5rpx;
  margin-right: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 4rpx;
}

.introduction {
  font-size: 23rpx;
  margin-top: 5rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.frequency {
  font-size: 23rpx;
  width: 150rpx;
  margin-top: 5rpx;
  color: #838383;
  line-height: 36rpx;
  float: right;
}

.price {
  font-size: 28rpx;
  margin-top: 5rpx;
  color: red;
  padding-right: 7rpx;
  font-weight: 700;
  line-height: 36rpx;
  float: left;
}

.original_price {
  font-size: 21rpx;
  margin-top: 5rpx;
  color: #b2b2b2;
  font-weight: 600;
  line-height: 40rpx;
  float: left;
  text-decoration: line-through;
}

.operation {
  width: 16%;
  height: 130rpx;
  float: left;
  margin-top: 15rpx;
}

.operation navigator, .operation .lower_shelf {
  width: 100%;
  height: 45rpx;
  border: none;
  background: #7a7a7a;
  font-size: 25rpx;
  color: white;
  border-radius: 10rpx;
  line-height: 45rpx;
  margin: 15rpx auto;
  text-align: center;
}

.page-bottom {
  position: absolute;
  width: 500rpx;
  height: 500rpx;
  background: red;
  display: none;
}

