page {
  position: relative;
  background: #f3f3f3;
}

.xx_top {
  width: 100%;
  padding-bottom: 20rpx;
  height: 83rpx;
  z-index: 999;
  position: fixed;
  top: 0rpx;
  background: white;
  left: 0rpx;
  box-shadow: 0rpx 0rpx 25rpx 5rpx #d4d3d3;
}

.display {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
}

.display-sele {
  font-size: 30rpx;
  width: 33.33%;
  text-align: center;
  border-bottom: 1px solid #ece8e8;
  height: 50rpx;
}

.active {
  color: #dd2727;
  border-bottom: 1px solid #dd2727;
}

/* 内容 */

.eval-all {
  width: 100%;
  margin: 120rpx auto 0rpx;
  padding-bottom: 10rpx;
}

.order {
  width: 96%;
  background: white;
  margin: 0rpx auto 25rpx;
  padding-bottom: 10rpx;
}

.order_title {
  width: 96%;
  height: 100rpx;
  margin: 0rpx auto;
  line-height: 100rpx;
  font-size: 15px;
  font-weight: bold;
  border-bottom: 4rpx solid #f0eded;
}

.status_text {
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  margin-right: 20rpx;
  font-size: 14px;
  font-weight: 500;
  float: right;
}

.status_btn {
  color: green;
}

.number {
  width: 96%;
  height: 70rpx;
  margin: 0rpx auto;
  line-height: 70rpx;
  border-bottom: 1rpx solid #ebe8e8;
}

.order_number {
  width: 60%;
  height: 70rpx;
  float: left;
  font-size: 12px;
}

.order_date {
  width: 40%;
  float: left;
  font-size: 12px;
  height: 70rpx;
  text-align: center;
}

.order_goods {
  width: 96%;
  height: 120rpx;
  margin: 20rpx auto 0rpx;
  border-bottom: 1rpx solid #dad6d6;
  padding-bottom: 20rpx;
}

.good_img {
  width: 25%;
  height: 120rpx;
  float: left;
}

.good_img image {
  width: 90%;
  height: 120rpx;
}

.good_text {
  width: 40%;
  height: 120rpx;
  float: left;
}

.good_name {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 12px;
  margin-top: 25rpx;
}

.good_biref {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.good_num {
  width: 15%;
  height: 120rpx;
  float: left;
  font-size: 12px;
  text-align: center;
  line-height: 120rpx;
}

.good_price {
  width: 20%;
  height: 120rpx;
  font-size: 14px;
  color: red;
  line-height: 120rpx;
  text-align: center;
  font-weight: bold;
  float: left;
}

.news {
  width: 96%;
  margin: 10rpx auto 0rpx;
}

.user_news {
  width: 100%;
  margin: 5rpx 0rpx;
  font-size: 12px;
  color: rgb(109, 107, 107);
  line-height: 40rpx;
}

.user_news text,.store_news text{
  font-size: 12px;
	font-weight: 700;
  color: rgb(75, 74, 74);
}

.store_news {
  width: 100%;
  border-top: 1rpx dotted rgb(245, 243, 243);
  font-size: 12px;
  color: rgb(109, 107, 107);
  line-height: 40rpx;
}
.user_content{
  width:100%;
  margin: 10rpx auto 0rpx;
	border-top:4rpx solid #f0eded;
}
.user{
  width:96%;
  margin: 0rpx auto;
}

.user_title{
  width: 100%;
  margin: 5rpx 0rpx;
  font-size: 24rpx;
  color: rgb(71, 71, 71);
	font-weight: 700;
  line-height: 40rpx;
	border-bottom:1rpx solid #faf7f7;
}

.user_text{
  font-size: 24rpx;
	line-height: 35rpx;
  color: rgb(75, 74, 74);
}

.operation {
  width: 100%;
  height: 100rpx;
  margin: 20rpx auto 0rpx;
  border-top: 4rpx solid #f0eded;
}

.count_price {
  width: 30%;
  height: 100rpx;
  float: left;
  font-size: 16px;
  line-height: 100rpx;
  text-align: center;
  color: red;
  font-weight: bold;
}

.count_btn {
  width: 55%;
  height: 100rpx;
  float: right;
}

.btn {
  font-size: 14px;
  color: #dd2727;
  padding: 0rpx 15rpx;
  height: 60rpx;
  float: right;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  font-weight: bold;
  margin-top: 20rpx;
  margin-right: 30rpx;
  border: 2rpx solid #dd2727;
}

.btn1 {
  font-size: 14px;
  color: rgb(109, 107, 107);
  padding: 0rpx 25rpx;
  height: 60rpx;
  float: right;
  line-height: 60rpx;
  font-weight: bold;
  text-align: center;
  border-radius: 10rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
  border: 2rpx solid rgb(107, 107, 107);
}

.btn2 {
  font-size: 14px;
  color: green;
  padding: 0rpx 25rpx;
  height: 60rpx;
  float: right;
  line-height: 60rpx;
  font-weight: bold;
  text-align: center;
  border-radius: 10rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
}

.middle_none {
  margin: 20rpx 0rpx;
  text-align: center;
  font-size: 28rpx;
  color: #838383;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.2);
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 35%;
  left: 15%;
  z-index: 9999;
  background: white;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 30rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #dd2727;
  background: white;
  text-align: center;
}

.btn-confirm::after {
  border: none;
}
