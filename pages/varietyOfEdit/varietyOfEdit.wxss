/* 预约会议室申请 */
page{padding-top:50rpx;}

/* 整体样式大小 */
.main{width:95%;
			margin:0rpx auto 150rpx;
			/* background: red; */
			}



.content{width: 100%;
				height: 110rpx;
				border-top:1rpx solid #dbdada;
				}


.content .text{
				width:30%;
				font-size:30rpx;
				font-weight: 700;
				height: 110rpx;
				text-align: center;
				line-height: 110rpx;
				float:left;
			}

.content input{
				width:70%;
				height: 110rpx;
				float:left;
				color:rgb(66, 65, 65);
				font-size:30rpx;
			}

/* 价格 */
.content .price{
				width:40%;
				height: 110rpx;
				float:left;
				color:#333232;
				font-size:30rpx;
			}



.checkbox{width:50%;
    height:110rpx;
		font-size:27rpx;
		line-height: 90rpx;
		}


.checkbox radio{
		margin:0rpx 12rpx;
		font-size:30rpx;
		transform: scale(0.8,0.8);
		}



/* 详情 */
.details{
				width: 100%;
				height:400rpx;
				border-top:1rpx solid #dbdada;
			}

.details .text{
				width:30%;
				font-size:30rpx;
				font-weight: 700;
				height: 120rpx;
				text-align: center;
				line-height: 120rpx;
				float:left;
			}

.meeting{
				width:70%;
				font-size:30rpx;
				padding-top:20rpx;
				float:left;
			}

.meeting textarea{
				width:95%;
				padding:10rpx;
				border:1rpx solid #dbdada
			}




/* 图片 */
.picture{
				width: 100%;
				border-top:1rpx solid #dbdada;
			}

.picture .text{
				width:30%;
				font-size:30rpx;
				font-weight: 700;
				height: 120rpx;
				text-align: center;
				line-height: 120rpx;
				float:left;
			}


/* 图片内容 */
/* .picture_list {
  width: 70%;
	float:left;
	padding:20rpx 0rpx;
} */

.picture_list {
  padding: 20rpx 0rpx;
  width: 70%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.image {
  width: 40rpx;
  height: 40rpx;
  /* margin: 0 4%; */
}

.add-image, .up-pic image {
  margin-top: 2%;
  margin-left: 2%;
  width: 120rpx;
  height: 120rpx;
  color: #ddd;
  font-size: 144rpx;
  line-height: 95%;
  text-align: center;
  background-color: #fff;
  /* cursor: pointer; */
  border-radius: 10rpx;
}


.picture_item {
  margin: 10px;
  margin-left: 0;
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.picture_item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f00;
}

.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 12px;
}

.picture_item image {
  width: 120rpx;
  height: 120rpx;
}

/* 底部重置提交 */
.nav_container{
			position: fixed;
			width: 100%;
			height: 120rpx;
			bottom:0px;
			background-color: white;
			z-index: 999;
			box-shadow:0rpx 6rpx 6rpx 6rpx #838383;
		}


/* 重置数据 */
.reset{width: 180rpx;
		height:70rpx;
		float:left;
		margin:25rpx 0rpx 0rpx 80rpx;
		text-align: center;
		line-height: 70rpx;
		background: #dd2727;
		color:white;
		border-radius: 26rpx;
		font-size:27rpx;

		}

/* 提交数据 */
.submit{width: 180rpx;
		height:70rpx;
		float:right;
		margin:25rpx 80rpx 0rpx 0rpx;
		text-align: center;
		line-height: 70rpx;
		background: #838383;
		color:white;
		border-radius: 26rpx;
		font-size:27rpx;
}