<!--轮播banner-->
<swiper indicator-dots="true" autoplay="true" interval="2000" duration="2000" circular="true" class="banner">
  <block wx:for="{{imglist}}">
    <swiper-item>
      <navigator url="{{item.id}}">
        <image src="{{item.icon}}" class="banner-image" mode="aspectFill" />
      </navigator>
    </swiper-item>
  </block>
</swiper>
<!-- 主体 -->
<view class="main">
  <view class="main-name">{{food.name}}</view>
  <view class="show">
    <view style="color:#838383">{{food.store_name}}</view>
    <view class="l2">评分:{{food.num_score}}</view>
    <view class="l2">已售:{{food.total}}</view>
  </view>

  <view class="show-number">
    <view class="flex-row flex-y-center mb-20">
      <view class="flex-grow-1 number-size">购买数量</view>
      <view class="flex-grow-0">
        <view class="flex-row number-input-box">
          <view class="flex-grow-0 flex-x-center flex-y-center number-btn number-sub" bindtap="numberSub">-</view>
          <view class="flex-grow-0">
            <input class="flex-grow-1 number-input" value="{{number}}" type="number" step="1" min="1" bindblur="numberBlur" disabled="true" />
          </view>
          <view class="flex-grow-0 flex-x-center flex-y-center number-btn number-add" bindtap="numberAdd">+</view>
        </view>
      </view>
    </view>
  </view>
  <view class="display">
    <view class="display-sele {{check=='0' ? 'active' : ''}}" bindtap='selectDispaly' data-id="0">
      菜品介绍
    </view>
    <view class="display-sele {{check=='1' ? 'active' : ''}}" bindtap='selectDispaly' data-id="1">
      评分
    </view>
  </view>

  <!--介绍-->
  <view wx:if="{{check=='0'}}" class="eval-all">
    <view class="brief-content">{{food.brief}}</view>
  </view>

  <!--评价-->

  <!--评价-->
  <view wx:if="{{check=='1'}}" class="eval-all">
    <view wx:if="{{list.length != 0}}">
      <block wx:for="{{list}}" wx:for-item="item" wx:key="">
        <view class="evaluate">
          <view class="content_left_content">
            <image class="centent-img" src="{{item.avatar}}" mode="aspectFill" />
          </view>
          <view class="content_left_right">
            <view class="introduction">
              <view class="immediately">{{item.comment_time}}</view>
              <block wx:for="{{item.question}}" wx:for-item="value" wx:key="">
                <view class="comment_text">{{value.question}}:
                  <text class="comment_text">{{value.option}}</text>
                </view>
              </block>
              <view style="color:#726f6f">备注说明:
                <view class="comment_text">{{item.remarks}}</view>
              </view>
            </view>
          </view>
        </view>
        <view class="line"></view>
      </block>
    </view>
    <view wx:else>
      <view class="middle_none">暂无评分</view>
    </view>
  </view>
</view>
<!-- 底部 -->
<view class="nav_container">
  <view class="price">
    <text class="money">￥{{total}}</text>
    <!-- <text class="original_price">￥8</text> -->
  </view>
  <view class="pay" bindtap="{{food.store_status == 1?'toOrder':'ts'}}" data-id='1'>自付</view>
  <view class="de-pay" bindtap="{{food.store_status == 1?'toOrder':'ts'}}" data-id="2">部门代付</view>
</view>