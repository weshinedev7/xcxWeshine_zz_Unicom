/* 预约会议室申请 */

page {
  padding-top: 50rpx;
}

/* 整体样式大小 */

.main {
  width: 95%;
  margin: 0rpx auto 150rpx;
}

.content {
  width: 100%;
  height: 110rpx;
  border-bottom: 1rpx solid #ececec;
}

.content .text {
  width: 24%;
  font-size: 30rpx;
  height: 110rpx;
  line-height: 110rpx;
  float: left;
}

.content input {
  width: 76%;
  height: 110rpx;
  float: left;
  color: #888;
  font-size: 30rpx;
}

/* 价格 */

.content .price {
  width: 24%;
  height: 110rpx;
  float: left;
  color: #333232;
  font-size: 30rpx;
}

.checkbox {
  width: 50%;
  height: 110rpx;
  font-size: 27rpx;
  line-height: 90rpx;
  margin-right: 60rpx;
  margin-left: -5rpx;
}

.checkbox radio {
  margin: 5rpx 0rpx 0rpx;
  /* font-size: 30rpx; */
  transform: scale(0.8, 0.8);
}

/* 详情 */

.details {
  width: 100%;
  height: 100rpx;
}

.details_title {
  width: 100%;
  font-size: 30rpx;
  height: 80rpx;
  text-align: left;
  line-height: 80rpx;
  float: left;
}

.meeting {
  width: 100%;
  font-size: 30rpx;
  float: left;
}

.meeting textarea {
  width: 96%;
  padding: 15rpx;
  border: 1rpx solid #ececec;
  border-radius: 26rpx;
}

/* 图片 */

.picture {
  width: 100%;
}

.picture_title {
  width: 100%;
  font-size: 30rpx;
  height: 80rpx;
  text-align: left;
  line-height: 80rpx;
  float: left;
}

/* 图片内容 */

.picture_list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.image {
  width: 40rpx;
  height: 40rpx;
  /* margin: 0 4%; */
}

.add-image, .up-pic image {
  /* margin-top: 2%;
  margin-left: 2%; */
  width: 130rpx;
  height: 130rpx;
  color: #ddd;
  text-align: center;
}

.picture_item {
  margin: 10px;
  margin-left: 0;
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.picture_item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f00;
}

.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 12px;
}

.picture_item image {
  width: 120rpx;
  height: 120rpx;
}

/* 底部重置提交 */

.nav_container {
  position: fixed;
  width: 100%;
  height: 120rpx;
  bottom: 0px;
  background-color: white;
  z-index: 999;
  box-shadow: 0rpx 6rpx 6rpx 6rpx #838383;
}

/* 重置数据 */

.reset {
  width: 180rpx;
  height: 70rpx;
  float: left;
  margin: 25rpx 0rpx 0rpx 80rpx;
  text-align: center;
  line-height: 70rpx;
  background: #dd2727;
  color: white;
  border-radius: 26rpx;
  font-size: 27rpx;
}

/* 提交数据 */

.submit {
  width: 180rpx;
  height: 70rpx;
  float: right;
  margin: 25rpx 80rpx 0rpx 0rpx;
  text-align: center;
  line-height: 70rpx;
  background: #838383;
  color: white;
  border-radius: 26rpx;
  font-size: 27rpx;
}
