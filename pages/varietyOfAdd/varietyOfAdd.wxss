/* pages/makeAnAppointment/makeAnAppointment.wxss */

/* 预约会议室申请 */

.main{margin-top:50rpx;
			width:100%;
			/* height:2000rpx; */
			margin-bottom:200rpx;
			/* background: blue; */
			}



.title{width: 80%;
				height: 65rpx;
				margin:0rpx auto;
				/* background: red; */
				}


.title .text{
				width:160rpx;
				font-size:30rpx;
				height: 60rpx;
				/* text-align: left; */
				line-height: 84rpx;
				float:left;
			}

.title input{
				width:65%;
				height: 60rpx;
				padding:0rpx 20rpx;
				float:left;
				border-bottom:1rpx solid #b1afaf;
				font-size:25rpx;
			}




/* 会议开始时间 */
.start_date{width: 80%;
				height: 65rpx;
				margin:20rpx auto 0rpx;
			
			}

.start_date .text{
				width:160rpx;
				font-size:30rpx;
				height: 60rpx;
				line-height: 84rpx;
				float:left;
			}


.start_date input{
				width:65%;
				height: 60rpx;
				padding:0rpx 20rpx;
				float:left;
				border-bottom:1rpx solid #b8b6b6;
				/* border-radius: 26rpx; */
				font-size:25rpx;
			}



.icon-title{width: 80%;
				margin:25rpx auto;
				padding-top:20rpx;
				font-size:33rpx;
				height: 60rpx;
				font-weight: 550;
				text-align: center;
				position: relative;
				line-height: 60rpx;
			}

.add_image{width:40rpx;
				height:40rpx;
				position: absolute;
				top: 32rpx;
				left: 310rpx;
				}



.icon{width:80%;
			margin:0rpx auto;
			}

.add_icon{width:100%;
			height:120rpx;
			}



.icon_text{font-size:30rpx;
				color:#b2b2b2;
				text-align: center;
			}



.add_icon image{width:25%;
			height:120rpx;
			}



.meeting-content{width: 80%;
				margin:20rpx auto;
				padding-top:20rpx;
				font-size:33rpx;
				height: 60rpx;
				font-weight: 550;
				/* border-top:1rpx dashed  #838383; */
				text-align: center;
				line-height: 60rpx;
			}


.meeting{width: 80%;
				min-height: 300rpx;
				margin:20rpx auto 40rpx;
				/* background: red; */
				}


.meeting textarea{width: 95%;
				min-height:200rpx;
				padding:20rpx 10rpx;
				font-size:30rpx;
				border:1rpx solid  #838383;
				border-radius: 26rpx;
}



.supplement{width:50%;
    height:70rpx;
		margin:50rpx auto 20rpx;
			}



.supplement-content{width:80%;
    margin:0rpx auto;
			}

.checkbox{width:50%;
    height:50rpx;
		/* float:left; */
		margin:6rpx 12rpx;
		font-size:30rpx;
		transform: scale(0.9,0.9);
		}


/* 底部重置提交 */
.nav_container{
			position: fixed;
			width: 100%;
			height: 120rpx;
			bottom:0px;
			background-color: white;
			z-index: 999;
			box-shadow:0rpx 6rpx 6rpx 6rpx #838383;
		}

.price{margin-top:30rpx;
			width:200rpx;
			float:left;
			margin:30rpx 0rpx 0rpx 50rpx
		}


.money-label{font-size:22rpx;
			color:red;
			}

.money{font-size:40rpx;
			color:red;
			font-weight: 700;
			}

.original_price{font-size:22rpx;
				color:#838383;
				margin-left:20rpx;
				text-decoration:line-through;
				}




/* 重置数据 */
.reset{width: 180rpx;
		height:70rpx;
		float:left;
		margin:25rpx 0rpx 0rpx 80rpx;
		text-align: center;
		line-height: 70rpx;
		background: red;
		color:white;
		border-radius: 26rpx;
		font-size:27rpx;

		}

/* 提交数据 */
.submit{width: 180rpx;
		height:70rpx;
		float:right;
		margin:25rpx 80rpx 0rpx 0rpx;
		text-align: center;
		line-height: 70rpx;
		background: #838383;
		color:white;
		border-radius: 26rpx;
		font-size:27rpx;

		}