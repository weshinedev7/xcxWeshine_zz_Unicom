
/*轮播banner*/
.banner{
	width:100%;
	height:550rpx;
}
.banner-image{
	width:100%;
	height:550rpx;
}

.main{width:90%;
				height:500rpx;
				margin:30rpx auto
				}

.car-name{font-weight: 900;
				font-size:40rpx;
				padding-left:0rpx
				}

.car-details{font-weight: 500;
				font-size:25rpx;
				margin-top:10rpx;
				padding-left:0rpx
				}
.collection{width:25rpx;
				height:25rpx;
				}

.label{margin:10rpx 0rpx 0rpx;
				width:100%;
				height:140rpx;
				/* background: blue */
			}

.label-content{width:140rpx;
				height:50rpx;
				font-size:25rpx;
				margin:8rpx 13rpx;
				line-height: 50rpx;
				text-align: center;
				float:left;
				color:white;
				border-radius: 20rpx;
				background: #AFC6B4;
				}


.brief-introduction{width:100%;
				height:350rpx;
				/* background: red; */
				}

.brief-titile{font-size:33rpx;
				font-weight: 900;
				padding:20rpx 0rpx;
				}


.brief-content{font-size:25rpx;
				color:#838383;
				}


/* 预约须知 */
.notice{width:100%;
				height:300rpx;
				margin:50rpx 0rpx;
				padding-top:50rpx;
					/* background: red; */
				border-top: 1rpx solid #e0dddd;
}



.notice-titile{font-size:33rpx;
				font-weight: 900;
				padding:20rpx 0rpx;
				}


.notice-content{font-size:25rpx;
				color:#838383;
				}

