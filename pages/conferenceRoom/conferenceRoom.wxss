/* 选项卡 */

.display {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
}

.display-sele {
  font-size: 30rpx;
  width: 33.3%;
  text-align: center;
  border-bottom: 1px solid #838383;
  height: 50rpx;
}

.active {
  color: #dd2727;
  border-bottom: 1px solid #dd2727;
}

/*全部*/

.flex-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-flex-direction: row;
  flex-direction: row;
}

.items {
  position: relative;
  font-size: 30rpx;
  margin: 30rpx;
  padding: 30rpx;
  border: #eee 1rpx solid;
  border-bottom: 3px solid #eee;
  margin-bottom: 30rpx;
}

.item {
  width: 100%;
  border-bottom: #eee 1rpx solid;
  margin-bottom: 30rpx;
}

.left {
  width: 30%;
}

.right {
  width: 50%;
}

.more {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status {
  width: 18%;
  height: 70rpx;
  background: red;
  position: absolute;
  color: white;
  text-align: center;
  line-height: 70rpx;
  font-size: 27rpx;
  top: -15rpx;
  right: -10rpx;
}

.flr {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.edit {
  width: 120rpx;
  height: 60rpx;
  float: right;
  margin-right: 10rpx;
  text-align: center;
  line-height: 60rpx;
  background: #d83131;
  color: white;
  border-radius: 26rpx;
  font-size: 30rpx;
}

.cancel {
  width: 120rpx;
  height: 60rpx;
  float: right;
  margin-right: 10rpx;
  text-align: center;
  line-height: 60rpx;
  background: #838383;
  color: white;
  border-radius: 26rpx;
  font-size: 30rpx;
}

.status_yes {
  border: 1rpx solid #eee;
  font-size: 30rpx;
  padding: 10rpx;
}

.tac {
  text-align: center;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.pass {
  height: 50rpx;
  line-height: 50rpx;
}

.s_none {
  color: #838383;
  text-align: center;
  font-size: 30rpx;
  width: 80%;
  margin: 10px;
}
