.eval-all {
  margin: 30rpx;
  position: relative;
	padding-top:110rpx;
}

.eval-all::after {
  clear: both;
}

.food_status {
  width: 100rpx;
  height: 50rpx;
  background: red;
  line-height: 50rpx;
  text-align: center;
  font-size: 13px;
  color: white;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}

.order-info {
  font-size: 9pt;
  color: #888;
}

