page {
  position: relative;
}

.xx_top {
  width: 100%;
  padding-bottom: 20rpx;
  height: 83rpx;
  z-index: 999;
  position: fixed;
  top: 0rpx;
  background: white;
  left: 0rpx;
  box-shadow: 0rpx 0rpx 25rpx 5rpx #d4d3d3;
}

.display {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
}

.display-sele {
  font-size: 30rpx;
  width: 50%;
  text-align: center;
  border-bottom: 1px solid #ece8e8;
  height: 50rpx;
}

.active {
  color: #dd2727;
  border-bottom: 1px solid #dd2727;
}

