.goods-pic {
  width: 156rpx;
  height: 156rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.content {
  margin-top: 10rpx;
}

.goods-name {
  margin-bottom: 10rpx;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 27rpx;
}

.attr-item {
  display: inline-block;
  margin-right: 36rpx;
  font-size: 9pt;
  color: #888;
}

.num {
  font-size: 9pt;
  color: #888;
}

.price {
  color: #ff4544;
  font-weight: 600;
  text-align: right;
  font-size: 30rpx;
}

.count-order {
  border-top: 1px solid #eee;
  margin: 30rpx 0;
  height: 100rpx;
  align-items: center;
  border-bottom: 3px solid #eee;
}

.order_number {
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #838383;
  font-size: 14px;
}

.operation {
  width: 70%;
  height: 100rpx;
  margin-left: 200rpx;
}

.score {
  margin-left: 10rpx;
  height: 50rpx;
  float: right;
  margin-right: 10rpx;
  text-align: center;
  line-height: 50rpx;
  background: #fff;
  border: 1px solid #838383;
  border-radius: 26rpx;
  font-size: 12px;
  color: #838383;
  padding: 0rpx 20rpx;
  margin: 20rpx 10rpx 0rpx;
}

.tl {
  text-align: left;
}

.tr {
  text-align: right;
}

.middle_none {
  text-align: center;
  font-size: 28rpx;
  color: #838383;
}

.btn {
  color: green;
  border: 1rpx solid green;
}

.cancel {
  width: 140rpx;
  height: 100rpx;
  float: right;
  margin-right: 30rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #838383;
}

/* 模态框 */

.show-btn {
  margin-top: 100rpx;
  color: #2c2;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 35%;
  left: 15%;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 30rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #dd2727;
  text-align: center;
}
