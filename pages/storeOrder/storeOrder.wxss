.flex-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-flex-direction: row;
  flex-direction: row;
}

.eval-all {
  margin: 30rpx;
  position: relative;
}

.food_status {
  width: 100rpx;
  height: 50rpx;
  background: red;
  line-height: 50rpx;
  text-align: center;
  font-size: 13px;
  color: white;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}

.order-info {
  font-size: 9pt;
  color: #888;
}

/* .goods-list{
	margin:0rpx 30rpx;
