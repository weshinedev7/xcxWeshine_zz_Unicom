page {
  background: #f3f3f3;
}

.mode {
  width: 95%;
  height: 80rpx;
  background: white;
  margin: 10rpx auto 15rpx;
}

.mode_center {
  width: 90%;
  height: 80%;
  margin: 0rpx auto;
}

.mode_title {
  width: 48%;
  float: left;
  height: 80rpx;
  font-size: 14px;
  line-height: 80rpx;
  font-weight: 700;
}

.mode_content {
  width: 50%;
  float: left;
  text-align: right;
  height: 80rpx;
  font-size: 14px;
  line-height: 80rpx;
}

.switch {
  margin-top: 10rpx;
  margin-left: 50rpx;
}

.content {
  width: 95%;
  background: white;
  margin: 0rpx auto;
}

.store {
  width: 100%;
  height: 80rpx;
}

.store_content {
  width: 90%;
  height: 80rpx;
  font-size: 15px;
  margin: 10rpx auto;
  font-weight: 900;
  line-height: 80rpx;
  border-bottom: 2px solid #ebe8e8;
}

.foods {
  width: 90%;
  margin: 40rpx auto 0rpx;
}

.foods_content {
  width: 100%;
  margin-top: 20rpx;
  height: 100rpx;
  border-bottom: 1rpx dotted #ebe8e8;
  padding-bottom: 20rpx;
}

.foods_img {
  width: 20%;
  height: 100rpx;
  float: left;
}

.foods_img image {
  width: 100%;
  height: 100rpx;
}

.foods_information {
  width: 40%;
  height: 100rpx;
  float: left;
}

.foods_name {
  font-size: 13px;
  font-weight: 700;
  width: 90%;
  float: right;
  margin-top: 10rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.foods_brief {
  font-size: 11px;
  width: 90%;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  float: right;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.foods_num {
  width: 20%;
  height: 100rpx;
  font-size: 13px;
  float: left;
  text-align: center;
  line-height: 100rpx;
}

.foods_price {
  width: 20%;
  font-size: 15px;
  height: 100rpx;
  font-weight: 700;
  color: red;
  float: left;
  text-align: center;
  line-height: 100rpx;
}

.clear:after {
  content: '';
  display: block;
  visibility: hidden;
  height: 0;
  clear: both;
}

.subtotal {
  width: 90%;
  height: 100rpx;
  margin: 30rpx auto 0rpx;
  border-top: 2px solid #ebe8e8;
}

.subtotal_price {
  width: 50%;
  height: 100rpx;
  float: right;
  line-height: 100rpx;
  text-align: right;
  font-size: 16px;
}

.subtotal_price_title {
  font-size: 10px;
  float: right;
}

.subtotal_price text {
  color: red;
  font-weight: 900;
  float: right;
}

.remarks {
  width: 95%;
  background: white;
  margin: 15rpx auto 200rpx;
  padding-bottom: 40rpx;
}

.remarks .remark_title {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 13px;
  font-weight: 700;
  margin: 0rpx auto;
}

textarea {
  width: 90%;
  height: 360rpx;
  padding: 20rpx 10rpx;
  font-size: 12px;
  border: 1rpx solid #ececec;
  border-radius: 10rpx;
  margin: 0rpx auto;
}

/* 底部导航 */

.nav_container {
  position: fixed;
  width: 100%;
  height: 120rpx;
  bottom: 0px;
  background-color: white;
  z-index: 999;
  box-shadow: 0rpx 6rpx 12rpx 6rpx #cecdcd;
}

.price {
  margin-top: 30rpx;
  width: 200rpx;
  float: left;
  margin: 30rpx 0rpx 0rpx 50rpx;
}

.money {
  font-size: 40rpx;
  color: red;
  font-weight: 700;
}

.pay {
  width: 180rpx;
  height: 70rpx;
  float: right;
  margin-top: 25rpx;
  margin-right: 20rpx;
  text-align: center;
  line-height: 70rpx;
  background: #dd2727;
  color: white;
  border-radius: 10rpx;
  font-size: 27rpx;
}

.input {
  width: 90%;
  height: 80rpx;
  float: left;
  color: #888;
  font-size: 26rpx;
}

.time1 {
  position: relative;
}

.right1 {
  width: 15%;
  height: 110rpx;
  position: absolute;
  right: -10rpx;
  top: 0rpx;
}

.right1 image {
  width: 80%;
  height: 40rpx;
  margin: 18rpx 0rpx 0rpx 25rpx;
}

.time {
  position: relative;
}

.right {
  width: 15%;
  height: 110rpx;
  position: absolute;
  right: -10rpx;
  top: 0rpx;
}

.right image {
  width: 40%;
  height: 45rpx;
  margin: 30rpx 0rpx 0rpx 33rpx;
}

.yy_title {
  width: 40%;
  float: left;
}

/*swtich整体大小及背景色*/

.switch1 {
	margin-bottom: 10rpx;
}

.wx-switch-input {
  width: 100rpx !important;
  height: 50rpx !important;
  border: #dd2727 !important; /* 2018-07-18 重置开关边框颜色 */
}

/*白色样式（false的样式）*/

.wx-switch-input::before {
  width: 100rpx !important;
  height: 50rpx !important;
}

/*绿色样式（true的样式）*/

.wx-switch-input::after {
  width: 60rpx !important;
  height: 50rpx !important;
}
