<form bindsubmit="submit">
  <view class="page">
    <view class="store_icon">
      <image src="{{info.img}}" class="icon"></image>
    </view>
    <view class="content">
      <view class="content_input">
        <view class="content_text">商店名称</view>
        <view class="text">{{info.foodName}}</view>
      </view>
    </view>
    <view class="content">
      <view class="content_input">
        <view class="content_text">商品数量</view>
        <view class="text">{{info.number}}</view>
      </view>
    </view>
    <view class="content">
      <view class="content_input">
        <view class="content_text">商品价格</view>
        <view class="text">{{info.total}}</view>
      </view>
    </view>
    <view class="content">
      <view class="content_input">
        <view class="content_text">店铺名称</view>
        <view class="text">{{info.storeName}}</view>
      </view>
    </view>
    <view class="content">
      <view class="content_input">
        <view class="content_text">备注(选填)</view>
        <view class="text"></view>
      </view>
    </view>

    <view class="details">
      <view class="content_details">
        <textarea placeholder='请输入备注' maxlength="500" name="remarks"></textarea>
      </view>
    </view>
  </view>

  <view class="nav_container">
    <button class="submit" form-type='submit'>立即下单</button>
  </view>
</form>