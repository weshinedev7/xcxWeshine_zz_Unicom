<form bindsubmit="submit">
  <view class="pages">

    <view class="mode">
      <view class="mode_center">
        <view class="mode_title">付款方式</view>
        <view class="mode_content">自付</view>
      </view>
    </view>

    <view class="content clear">

      <view class="store">
        <view class="store_content">老渔夫.疍家粥</view>
      </view>

      <view class="foods clear" wx:for="{{foods}}">

        <view class="foods_content">
          <view class="foods_img">
            <image src="{{item.img}}"></image>
          </view>
          <view class="foods_information">
            <view class="foods_name">{{item.name}}</view>
            <view class="foods_brief">{{item.brief}}</view>
          </view>
          <view class="foods_num">x{{item.number}}</view>
          <view class="foods_price">￥{{item.count_price}}</view>
        </view>
      </view>

      <view class="subtotal">
        <view class="subtotal_price">
          <text>￥{{sum}}.00</text>
          <view class="subtotal_price_title">小计</view>
        </view>
      </view>
    </view>

    <view class="remarks">
      <view class="remark_title">备注(选填)：</view>
      <textarea placeholder='请输入备注' maxlength="500" name="remarks"></textarea>
    </view>
  </view>
  <!-- 底部 -->
  <view class="nav_container">
    <view class="price">
      <text class="money">￥{{sum}}.00</text>
    </view>
    <!-- <view class="pay" bindtap="{{food.store_status == 1?'toOrder':'ts'}}" data-id="2">立即下单</view> -->
    <button class="pay" bindtap="{{food.store_status == 1?'toOrder':'ts'}}" data-id="2" form-type='submit'>立即下单</button>
  </view>
</form>