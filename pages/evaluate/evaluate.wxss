.food {
  width: 96%;
  background: white;
  margin: 10rpx auto 0rpx;
  padding: 10rpx 0rpx 0rpx;
}

.food-top {
  width: 100%;
  height: 200rpx;
  border-bottom: 1rpx solid #e7e4e4;
}

.food-img {
  width: 40%;
  float: left;
  height: 200rpx;
  border-right: 1rpx dotted #e7e7e7;
}

.food-img image {
  width: 80%;
  height: 140rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.food-text {
  width: 59%;
  float: right;
  height: 200rpx;
}

.food_name {
  width: 80%;
  height: 50rpx;
  margin: 20rpx auto 0rpx;
  font-size: 14px;
  line-height: 50rpx;
  color: #5a5858;
}

.price {
  width: 80%;
  height: 50rpx;
  margin: 0rpx auto;
}

.price-text {
  width: 50%;
  font-size: 13px;
  height: 50rpx;
  float: left;
  line-height: 50rpx;
  color: #838383;
}

.score-name {
  width: 40%;
  font-size: 14px;
  height: 50rpx;
  float: left;
  line-height: 50rpx;
  color: #838383;
}

.score-text {
  width: 60%;
  font-size: 13px;
  height: 50rpx;
  float: left;
  line-height: 50rpx;
  color: #838383;
}

.originsl-price {
  width: 50%;
  font-size: 13px;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  color: #838383;
}

.score {
  width: 80%;
  height: 50rpx;
  margin: 0rpx auto;
  font-size: 13px;
}

.food-bottom {
  width: 97%;
  margin: 0rpx auto;
  font-size: 12px;
  color: #838383;
  padding: 20rpx 0rpx;
}

.main {
  width: 100%;
  padding-top: 20rpx;
}

.main_content {
  width: 96%;
  border-radius: 26rpx;
  padding: 20rpx 0rpx;
  margin: 10rpx auto;
  background: white;
  overflow: hidden;
}

.main_left {
  width: 20%;
  float: left;
  height: 150rpx;
}

.main_left image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 20rpx 0rpx 0rpx 20rpx;
}

.main_right {
  width: 79%;
  float: left;
}

.main_right_top {
  width: 100%;
  height: 100rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx dotted #d1d0d0;
}

.main_right_top_left {
  width: 50%;
  height: 100rpx;
  float: left;
}

.main_right_top_left view {
  width: 100%;
  height: 33%;
  float: left;
  font-size: 13px;
  color: #838383;
}

.main_right_top_right {
  width: 50%;
  float: left;
  font-size: 13px;
  color: #838383;
}

.main_right_bottom {
  padding-top: 10rpx;
}

.main_right_bottom_top {
  width: 100%;
  height: 33%;
  padding-bottom: 5rpx;
  font-size: 13px;
  color: #1d1c1c;
}

.main_right_bottom_bottom {
  width: 100%;
  font-size: 13px;
  color: #636262;
}

.middle_none {
  text-align: center;
  font-size: 28rpx;
  color: #838383;
  margin-top: 300rpx;
}

.middle_none1 {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #838383;
}

.clear:after {
  content: '';
  display: block;
  visibility: hidden;
  height: 0;
  clear: both;
}
