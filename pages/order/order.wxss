.border {
  border-top: 1rpx dotted #f7f4f4;
}

.goods-name {
  margin-bottom: 30rpx;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 14px;
}

.attr-item {
  display: inline-block;
  margin-right: 36rpx;
  font-size: 9pt;
  color: #888;
}

.num {
  font-size: 9pt;
  color: #888;
	float:left;
	width:70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.price {
  color: #ff4544;
  font-weight: 600;
  text-align: right;
  font-size: 30rpx;
	float:right;
	width:30%;
}

.count-order {
  border-top: 1px solid #eee;
  margin: 20rpx 0 30rpx;
  height: 90rpx;
  align-items: center;
  border-bottom: 3px solid #eee;
}

.operation {
  width: 200%;
  height: 70rpx;
}

.score {
  margin-left: 10rpx;
  height: 50rpx;
  float: right;
  margin-right: 10rpx;
  text-align: center;
  line-height: 50rpx;
  background: #fff;
  border: 1px solid #838383;
  border-radius: 8rpx;
  font-size: 12px;
  color: #838383;
  padding: 0rpx 20rpx;
	margin-top:10rpx;
}

.tl {
  text-align: left;
}

.tr {
  text-align: right;
}

.middle_none {
  text-align: center;
  font-size: 28rpx;
  color: #838383;
}

.btn {
  color: #fd8501;
  border: 1rpx solid #fd8501;
}

.cancel {
  width: 230rpx;
  height: 70rpx;
  float: left;
  text-align: center;
  margin-right: 30rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #838383;
}
