.flex-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-flex-direction: row;
  flex-direction: row;
}

.eval-all {
  margin: 30rpx;
	padding-top:110rpx;
}

.order-info {
  font-size: 9pt;
  color: #888;
}


.food_status {
  width: 240rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 13px;
  float: left;
  color: #838383;
}

.goods-pic {
  width: 156rpx;
  height: 156rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.content {
  margin-top: 10rpx;
}

.hf {
  width: 100%;
	margin-top:10rpx;
}

.clear:after {
  content: '';
  display: block;
  visibility: hidden;
  height: 0;
  clear: both;
}

.hf .reply{
  width: 20%;
	float:left;
	font-size:12px;
	text-align: center;
	line-height: 50rpx;
  height: 50rpx;
	color:#838383;
}

.reply-text{
  width: 80%;
	float:left;
	line-height: 50rpx;
	font-size:12px;
	color:rgb(158, 157, 157);
}

.border {
  border-top: 1rpx dotted #f7f4f4;
}

.goods-name {
  margin-bottom: 10rpx;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 27rpx;
}

.attr-item {
  display: inline-block;
  margin-right: 36rpx;
  font-size: 9pt;
  color: #888;
}

.num {
  font-size: 9pt;
  color: #888;
}

.price {
  color: #ff4544;
  font-weight: 600;
  text-align: right;
  font-size: 30rpx;
}

.count-order {
  border-top: 1px solid #eee;
  margin: 10rpx 0 30rpx;
  height: 100rpx;
  align-items: center;
  border-bottom: 3px solid #eee;
}

.operation {
  width: 200%;
  height: 100rpx;
  /* margin-left:200rpx; */
}

.score {
  margin-left: 10rpx;
  height: 50rpx;
  float: right;
  margin-right: 10rpx;
  text-align: center;
  line-height: 50rpx;
  background: #fff;
  border: 1px solid #838383;
  border-radius: 26rpx;
  font-size: 12px;
  color: #838383;
  padding: 0rpx 20rpx;
  margin: 20rpx 10rpx 0rpx;
}

.tl {
  text-align: left;
}

.tr {
  text-align: right;
}

.middle_none {
  text-align: center;
  font-size: 28rpx;
  color: #838383;
}

.btn {
  color: #fd8501;
  border: 1rpx solid #fd8501;
}

.cancel {
  width: 230rpx;
  height: 100rpx;
  float: left;
	text-align: center;
  margin-right: 30rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #838383;
}
