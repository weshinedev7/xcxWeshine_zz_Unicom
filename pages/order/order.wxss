  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
}

.display-sele {
  font-size: 30rpx;
  width: 33.3%;
  text-align: center;
  border-bottom: 1px solid #e2e0e0;
  height: 50rpx;
}

.active {
  color: #ff6f43;
  border-bottom: 1px solid #ff6f43;
}

