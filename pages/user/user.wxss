/* pages/user/user.wxss */
/* 顶部 */
page {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
}


.top{width:100%;
		background: white;
		}



.top_centent{width:90%;
		height:240rpx;
		padding:50rpx 0rpx;
		margin:0rpx auto;
		padding-bottom:10rpx;
		}


.top_left{width:70%;
		height:140rpx;
		float:left;
		}



.user_name{width:100%;
		height:70rpx;
		font-weight: 600;
		font-size:55rpx;
		}



.user_id{
		width:100%;
		height:70rpx;
		line-height: 70rpx;
		font-size:30rpx;
		}



/* 顶部头像 */
.top_right{width:22%;
		height:130rpx;
		float:right;
		border-radius: 75rpx;
		}



.top_right image{width:100%;
		height:100%;
		}



.top_bottom{width:100%;
		height:70rpx;
		float:left;
		margin-top:20rpx;
		}	


.get_user_details{width:30%;
		height:65rpx;
		margin:5rpx 0rpx;
		float:right;
		text-align: center;
		line-height: 65rpx;
		font-size:26rpx;
		color:rgb(138, 136, 133);
		border:1rpx solid #c2bfbf;
		border-radius: 10rpx;
		}


/* 内容 */
.main{width:100%;
		background: white;
		margin-top:20rpx;
		padding-top:30rpx;
		}



.main_center{width:90%;
		height:800rpx;
		margin:0rpx auto;
		}


.center_list{width:100%;
		height:60rpx;
		padding:20rpx 0rpx;
		line-height: 60rpx;
		color:#858282;
		border-bottom:1rpx solid #f5f5f5;
		padding-bottom:10rpx;
	}



.center_list_text{font-size:26rpx;
		float:left;
		width:20%;
		height:60rpx;
	}



.center_list image{width:6%;
		height:40rpx;
		float:right;
		margin-top:10rpx;
		color:#858282;
	}

