/* pages/makeAnAppointment/makeAnAppointment.wxss */

/* 预约会议室申请 */

.main {
  margin: 50rpx auto 40rpx;
  width: 85%;
}

.content {
  width: 100%;
  height: 110rpx;
  border-bottom: 1rpx solid #ececec;
}

.content .text {
  width: 24%;
  font-size: 28rpx;
  height: 110rpx;
  line-height: 110rpx;
  float: left;
}

.content input {
  width: 76%;
  height: 110rpx;
  float: left;
  color: #888;
  font-size: 28rpx;
}

.time1 {
  position: relative;
}

/* .time2{position:relative} */

.right1 {
  width: 15%;
  height: 110rpx;
  position: absolute;
  right: -10rpx;
  top: 0rpx;
}

.right1 image {
  width: 30%;
  height: 45rpx;
  margin: 30rpx 0rpx 0rpx 33rpx;
}

.time {
  position: relative;
}

.right {
  width: 15%;
  height: 110rpx;
  position: absolute;
  right: -10rpx;
  top: 0rpx;
}

.right image {
  width: 30%;
  height: 45rpx;
  margin: 30rpx 0rpx 0rpx 33rpx;
}

.meeting-content {
  width: 100%;
  margin: 0rpx auto;
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #ececec;
  font-size: 33rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.meeting {
  width: 100%;
}

.meeting textarea {
  width: 96%;
  height: 360rpx;
  padding: 20rpx 10rpx;
  font-size: 30rpx;
  border: 1rpx solid #ececec;
  border-radius: 26rpx;
}

.supplement {
  width: 100%;
  height: 250rpx;
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #ececec;
  /* float:left; *//* margin: 0rpx auto; */
}

.supplement-content {
  width: 80%;
  margin: 0rpx auto;
}

.checkbox {
  width: 50%;
  height: 50rpx;
  float: left;
  margin: 6rpx 0rpx;
  font-size: 30rpx;
  transform: scale(0.9, 0.9);
}

/* 底部重置提交 */

.nav_container {
  /* position: fixed; */
  width: 100%;
  height: 140rpx;
  bottom: 0px;
  background-color: white;
  /* z-index: 999; */
  box-shadow: 0rpx 6rpx 6rpx 6rpx #838383;
}

/* 重置数据 */

.reset {
  width: 180rpx;
  height: 80rpx;
  float: left;
  margin: 30rpx 0rpx 0rpx 80rpx;
  text-align: center;
  line-height: 80rpx;
  background: #dd2727;
  color: white;
  border-radius: 26rpx;
  font-size: 27rpx;
}

/* 提交数据 */

.submit {
  width: 180rpx;
  height: 80rpx;
  float: right;
  margin: 30rpx 80rpx 0rpx 0rpx;
  text-align: center;
  line-height: 80rpx;
  background: #838383;
  color: white;
  border-radius: 26rpx;
  font-size: 27rpx;
}
