/* pages/search/search.wxss */
/*头部*/
.top{
	width:100%;
	height:90rpx;
}
.search-block {
    margin: 0rpx 20rpx;
		width:80%;
		float:left;
		height: 90rpx;
  	position: relative;
}
.search-block input{
  background: #eee;
  height: 70rpx;
	width:83%;
	margin-top:10rpx;
	float:left;
  line-height: 70rpx;
  border-radius: 30rpx;
  color: #b2b2b2;
	font-size:25rpx;
	padding:0rpx 60rpx;

}


.search-block image {
  height: 28rpx;
  width: 28rpx;
  margin: 0 10rpx;
  position: absolute;
  top: 35%;
  left: 2%;
}

.search-text{
	color:#838383;
	font-size:30rpx;
	width:90rpx;
	height:90rpx;
	line-height: 85rpx;
	float:left;
	text-align:center;
}

.content {
  display:flex;
  flex-wrap:wrap;
  margin:10rpx 30rpx;
  justify-content:space-between;
}
.child{
  width: 330rpx;
  margin-bottom:20rpx;
}

.child image{
  width:330rpx;
  height:400rpx;
}

.content-price{
  display:flex; 
  align-items:center;
  height:50rpx;
}
.content-name{
  font-size:30rpx;
  height:40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}
.new-price{
  color:#d81e06;
  font-weight:bold;
  font-size:30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}
.old-price{
  color:#A9A9A9;
  font-size:25rpx;
  text-decoration:line-through;
  margin-left:10rpx;
}
.score{
  font-size:25rpx;
  color:#A9A9A9;
  width:50%;
}
.shell{
  color:#A9A9A9;
  font-size:25rpx;
  width:50%;
  float:right;
  text-align:right
}
.store-name{
  font-size:25rpx;
}

.middle_none{text-align:center;font-size:28rpx;color:#666;margin-top:40rpx;}