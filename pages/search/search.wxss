/* pages/search/search.wxss */
page{
	background: #f3f3f3
}
/*头部*/
.top{
	width:100%;
	height:100rpx;
	background: white;
	margin-bottom:30rpx;
}
.search-block {
    margin: 0rpx 20rpx;
		width:80%;
		float:left;
		height: 90rpx;
  	position: relative;
}
.search-block input{
  background: #eee;
  height: 70rpx;
	width:83%;
	margin-top:10rpx;
	float:left;
  line-height: 70rpx;
  border-radius: 30rpx;
  color: #b2b2b2;
	font-size:25rpx;
	padding:0rpx 60rpx;

}


.search-block image {
  height: 28rpx;
  width: 28rpx;
  margin: 0 10rpx;
  position: absolute;
  top: 35%;
  left: 2%;
}

.search-text{
	color:#838383;
	font-size:30rpx;
	width:90rpx;
	height:90rpx;
	line-height: 85rpx;
	float:left;
	text-align:center;
}

/* 内容 */

.content {
  width: 96%;
  margin: 30rpx auto;
}

.child {
  width: 48%;
  float: left;
  border-radius: 12rpx;
  background: white;
  margin: 0rpx 1%;
  margin-bottom: 20rpx;
	position: relative;
}

.time{
	width: 100rpx;
	height:60rpx;
	text-align: center;
	line-height: 60rpx;
	background: red;
	color:white;
	font-size:13px;
	position:absolute;
	top:-3px;
	right:-3px;
}

.child image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx 12rpx 0rpx 0rpx;
}

.information {
  width: 94%;
  padding: 0rpx 10rpx;
  margin-top: -10rpx;
}

.content-price {
  display: flex;
  align-items: center;
  height: 40rpx;
}

.content-name {
  font-size: 28rpx;
  height: 32rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.new-price {
  color: #d81e06;
  font-weight: bold;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.old-price {
  color: #a9a9a9;
  font-size: 25rpx;
  text-decoration: line-through;
  margin-left: 15rpx;
}

.score {
  font-size: 25rpx;
  color: #a9a9a9;
  width: 50%;
}

.shell {
  color: #a9a9a9;
  font-size: 25rpx;
  width: 50%;
  float: right;
  text-align: right;
}

.store-name {
  font-size: 25rpx;
}

.middle_none {
	text-align: center;
	font-size:28rpx;
	color:#838383;
}