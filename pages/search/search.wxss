/* pages/search/search.wxss */
/*头部*/
.top{
	width:100%;
	height:90rpx;
}
.search-block {
    margin: 0rpx 20rpx;
		width:80%;
		float:left;
		height: 90rpx;
  	position: relative;
}
.search-block input{
  background: #eee;
  height: 70rpx;
	width:83%;
	margin-top:10rpx;
	float:left;
  line-height: 70rpx;
  border-radius: 30rpx;
  color: #b2b2b2;
	font-size:25rpx;
	padding:0rpx 60rpx;

}


.search-block image {
  height: 28rpx;
  width: 28rpx;
  margin: 0 10rpx;
  position: absolute;
  top: 35%;
  left: 2%;
}


.search-text{
	color:#838383;
	font-size:30rpx;
	width:90rpx;
	height:90rpx;
	line-height: 85rpx;
	float:left;
	text-align:center;
}
