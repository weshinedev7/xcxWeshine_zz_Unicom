<!-- 头部 -->
<view class="top">
  <view class="search-block">
    <input class="input" name="search" placeholder="请输入菜品名" bindinput="searchInput" value="麻辣" />
    <image src="/images/icon-search.png" />
  </view>
  <view class="search-text" bindtap="search">搜索</view>
</view>

<view wx:if="{{show == 1}}">
  <view class="content">
    <block wx:for="{{foods}}" wx:for-index="index" wx:for-item="item" wx:key="">
      <navigator url="/pages/details/details?id={{item.id}}" class="child" hover-class="none">
        <image src="{{item.img}}" />
        <view class="information">
          <view class="content-name">{{item.name}}</view>
          <view class="store-name">{{item.store_name}}</view>
          <view class="content-price">
            <view class="score">评分:8</view>
            <view class="shell">已售:{{item.total}}</view>
          </view>
          <view class="content-price">
            <view class="new-price">￥{{item.price}}</view>
            <view class="old-price">￥{{item.original_price}}</view>
          </view>
        </view>
      </navigator>
    </block>
  </view>
</view>
<view wx:if="{{show == 0}}" class="middle_none">
  暂无符合您搜索内容的菜品
</view>